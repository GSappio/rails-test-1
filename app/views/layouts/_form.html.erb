  <form class="bg-white rounded px-8 pt-6 pb-8 mb-4">
    <div class="mb-4">
   <!-- <% if current_user.present? %> --> 
        <label class="block text-gray-700 text-sm font-bold mb-2" for="firstname">
          Primeiro nome
        </label>
        <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="first_name" type="text" placeholder="Digite o primeiro nome" value="<%= current_user.first_name if current_user.present? %>"  >
      </div>

      <div class="mb-6">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="lastname">
          Segundo nome
        </label>
        <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" 
                     id="last_name" 
                     type="text" 
                     placeholder="Digite o segundo nome" 
                     value="<%= current_user.last_name if current_user.present?%>" >
      </div>

      <div class="flex items-center justify-between">
        <button id="btn-alter-form" 
                class="bg-[#42B72A] hover:bg-green-500 text-white font-bold w-full py-2 px-4 rounded focus:outline-none focus:shadow-outline" 
                type="button">
                    Alterar
        </button>
      <!-- <% end %> -->
    </div>
  </form>
 